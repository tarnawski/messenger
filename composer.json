{
    "name": "tarnawski/messenger",
    "description": "Simple application to send messages",
    "type": "project",
    "authors": [
        {
            "name": "Tomasz Tarnawski",
            "email": "tarnawski27@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-sockets": "*",
        "symfony/flex": "^1.16",
        "symfony/framework-bundle": "^5.3",
        "ramsey/uuid": "^4.2",
        "symfony/validator": "^5.3"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6"
    }
}
